{
    "include": ["src"],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "types": ["node"],
        "lib": ["ES2020", "DOM"],
        "allowJs": true,
        "checkJs": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitAny": true
    }
}